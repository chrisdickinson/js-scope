<div>
  <div class="js-scope-group">
    <span>
    {{#if block.id}}
      {{block.id.name}}
    {{else}}{{#unless block.parent}}
      &lt;anonymous&gt;
    {{else}}
      {{filename}}
    {{/unless}}
    {{/if}}
    </span>
    <code class="js-scope-location">
      <a rel="line" class="{{ block.type }}" href="#{{ block.loc.start.line }}:{{ block.loc.start.column }}">
        L{{ block.loc.start.line }}
      </a>
    </code>
  </div>
  <ol class="js-scope-variable-group">
    {{#each variables}}
      {{#if defs.length}}
        <li class="js-scope-variable {{ defs.0.type }}" data-index="{{@index}}">
          <span contenteditable>{{ name }}</span>
          <code class="js-scope-location">
            <a rel="line" href="#{{ defs.0.node.loc.start.line }}:{{ defs.0.node.loc.start.column }}">
              L{{ defs.0.node.loc.start.line }}
            </a>
          </code>
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>
